rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read access to everyone for all collections
    match /{document=**} {
      allow read: if true;
    }

    // Allow write access only to authenticated users for all collections
    match /cars/{carId} {
      allow write: if request.auth != null;
    }
     match /clients/{clientId} {
      allow write: if request.auth != null;
    }
     match /rentals/{rentalId} {
      allow write: if request.auth != null;
    }
  }
}
