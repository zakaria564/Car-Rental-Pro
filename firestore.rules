rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read access for everyone, but write access only for authenticated users.
    match /cars/{carId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /clients/{clientId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /rentals/{rentalId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
